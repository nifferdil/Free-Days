<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.epicodus.nationalfreedays"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".epicodus.ui.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".epicodus.ui.FreeDaysActivity"
            android:label="@string/title_activity_free_days"
            android:screenOrientation="portrait"
            android:parentActivityName=".epicodus.ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".epicodus.ui.MainActivity"/>
        </activity>
        <activity
            android:name=".epicodus.ui.FreeDaysActivity$NoteActivity"
            android:label="@string/title_activity_note"
            android:parentActivityName=".epicodus.ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".epicodus.ui.MainActivity"/>
        </activity>

        <meta-data
            android:name="AA_DB_NAME"
            android:value="Freeday.db"/>
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="2"/>

        <activity
            android:name=".epicodus.ui.NoteActivity"
            android:label="@string/title_activity_note"
            android:parentActivityName=".epicodus.ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".epicodus.ui.MainActivity"/>
        </activity>
        <activity
            android:name=".epicodus.ui.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".epicodus.ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".epicodus.ui.MainActivity"/>
        </activity>
        <activity
            android:name=".epicodus.ui.CategoryActivity"
            android:label="@string/title_activity_category"
            android:parentActivityName=".epicodus.ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".epicodus.ui.MainActivity"/>
        </activity>
        <activity
            android:name=".epicodus.ui.NewFreeDayActivity"
            android:label="@string/title_activity_new_free_day"
            android:parentActivityName=".epicodus.ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.nationalfreedays.epicodus.ui.MainActivity"/>
        </activity>
        <activity
            android:name=".epicodus.ui.AddedFreeDayDisplayActivity"
            android:label="@string/title_activity_added_free_day_display"
            android:parentActivityName=".epicodus.ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.nationalfreedays.epicodus.ui.MainActivity"/>
        </activity>
        <!-- Splash screen -->
        <activity
            android:name=".epicodus.ui.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>