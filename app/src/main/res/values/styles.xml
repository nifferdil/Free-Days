<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/dark_grey</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- APPBAR LAYOUT -->
    <style name="AppBarLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <!-- TOOLBAR LAYOUT -->
    <style name="ToolBarLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/AppActionBar</item>
    </style>

    <style name="AppActionBar" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Nav Drawer Items-->

    <style name="NavDrawerItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">56dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:onClick">onDrawerClick</item>
    </style>

    <style name="NavDrawerIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="NavDrawerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingRight">35dp</item>
    </style>

</resources>
