<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.nationalfreedays.epicodus.ui.NewFreeDayActivity"
    android:background="#65c7e4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a New Free Day:"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#404040"
        android:textSize="22sp"
        android:layout_margin="10sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newFreeDayTitleText"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="99dp"
        android:background="@android:color/white"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:hint="Enter title of new Free Day" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newFreeDayDate"
        android:background="@android:color/white"
        android:textSize="20sp"
        android:layout_below="@+id/newFreeDayTitleText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10sp"
        android:hint="Enter date of new Free Day" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newFreeDayDescription"
        android:background="@android:color/white"
        android:textSize="20sp"
        android:layout_below="@+id/newFreeDayDate"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_alignLeft="@+id/newFreeDayDate"
        android:layout_alignStart="@+id/newFreeDayDate"
        android:hint="Enter description of new Free Day" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Free Day"
        android:id="@+id/addNewFreeDayButton"
        android:background="#ffac1a"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/newFreeDayDescription"
        android:layout_alignStart="@+id/newFreeDayDescription" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Added Free Days"
        android:id="@+id/viewAddedFreeDayButton"
        android:background="#ffac1a"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/addNewFreeDayButton"
        android:layout_alignEnd="@+id/addNewFreeDayButton"
        android:layout_marginBottom="43dp" />

</RelativeLayout>
