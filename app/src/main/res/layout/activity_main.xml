<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="#65c7e4">

    <include layout="@layout/drawer_layout" android:layout_width="match_parent"
             android:layout_height="match_parent" />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Show Me Free Days!"
    android:id="@+id/daysButton"
    android:textSize="20sp"
    android:background="#ffac1a"
    android:layout_below="@+id/textView2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="50dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Never Miss Out on Free Stuff Again!"
    android:id="@+id/textView"
    android:layout_marginTop="46dp"
    android:textStyle="bold"
    android:textSize="36sp"
    android:textColor="#1415d5"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pick up awesome freebies ranging from cookies to popcorn to coffee..."
    android:id="@+id/textView2"
    android:layout_below="@+id/textView"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="49dp"
    android:textSize="22sp"
    android:textColor="#404040"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Find out about another Free Day? Add it using the button below:"
    android:id="@+id/textView4"
    android:layout_below="@+id/daysButton"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:textSize="18sp"
    android:textColor="#404040"/>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Add Your Own Free Day"
    android:id="@+id/addFreeDayButton"
    android:background="#ffac1a"
    android:layout_below="@+id/textView4"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="10sp"/>
</RelativeLayout>
