<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_marginBottom="25dp"
              tools:context="com.epicodus.nationalfreedays.epicodus.ui.FreeDaysActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:paddingBottom="25dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageLabel"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_coffee_maker"/>

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Free Day Name"
                android:textIsSelectable="false"
                android:textSize="28dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/newFreeDayDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Date"
                android:textSize="28dp"/>

            <TextView
                android:id="@+id/descriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Description"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/websiteLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Website"
                android:textSize="14sp"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_margin="5dp"
                >

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/button_previous"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/round_button"
                        android:layout_gravity="left"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ic_chevron_left_black_24dp"
                             />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/calendarButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_calendar"
                        android:layout_centerInParent="true"
                        />

                    <RelativeLayout
                        android:id="@+id/nextButton"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/round_button"
                        android:layout_gravity="left"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ic_chevron_right_black_24dp"
                            />

                    </RelativeLayout>
                </RelativeLayout>



            </RelativeLayout>

            <!--<Button-->
                <!--android:id="@+id/addNote"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_margin="10dp"-->
                <!--android:layout_marginBottom="20sp"-->
                <!--android:background="#fff385"-->
                <!--android:text="Add Notes"/>-->



            <!--<Button-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_above="@+id/nextButton"-->
                <!--android:layout_marginBottom="41dp"-->
                <!--android:background="#ffac1a"-->
                <!--android:text="Save the Date"-->
                <!--android:textSize="22sp"/>-->

        </LinearLayout>

    </ScrollView>

</LinearLayout>
