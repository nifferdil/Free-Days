<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65c7e4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/newFreeDayTitleLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:layout_margin="10sp"
        android:textColor="#404040" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/newFreeDayDateLabel"
        android:layout_below="@+id/newFreeDayTitleLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:layout_margin="10sp"
        android:textColor="#404040" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/newFreeDayDescriptionLabel"
        android:layout_alignLeft="@+id/newFreeDayDateLabel"
        android:layout_alignStart="@+id/newFreeDayDateLabel"
        android:layout_below="@+id/newFreeDayDateLabel"
        android:textColor="#404040" />
</RelativeLayout>